@model PlantMania.Web.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <h1>Create Category</h1>

    <form asp-action="Create" method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Slug" class="form-label"></label>
            <input asp-for="Slug" class="form-control" />
            <div class="form-text">Example: care, pests, lighting</div>
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
