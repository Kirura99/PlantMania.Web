@model List<PlantMania.Web.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="m-0">Categories</h1>
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No categories yet.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th style="width: 70px;">Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th style="width: 200px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><code>@item.Slug</code></td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
