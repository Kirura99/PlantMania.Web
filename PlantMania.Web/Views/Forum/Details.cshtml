@using PlantMania.Web.Models
@model PlantMania.Web.ViewModels.Forum.ForumDetailsViewModel

@{
    ViewData["Title"] = "Details";
    var post = Model.Post;
}

<div class="container mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Back to Forum</a>

    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-2">
                @if (post.Type == PostType.Question)
                {
                    <span class="badge bg-info text-dark me-2">Question</span>
                    <span class="badge bg-secondary me-2">@post.Status</span>
                }
                else
                {
                    <span class="badge bg-secondary me-2">Post</span>
                }

                <span class="text-muted">Category:</span> <strong>@Model.CategoryName</strong>
            </div>

            <h2 class="h4">@post.Title</h2>

            @if (Model.Tags.Count > 0)
            {
                <div class="mb-2">
                    @foreach (var t in Model.Tags)
                    {
                        <span class="badge bg-light text-dark border me-1">@t</span>
                    }
                </div>
            }

            <div class="mt-3">
                <pre style="white-space: pre-wrap; margin:0;">@post.Content</pre>
            </div>

            <div class="text-muted small mt-3">
                Created: @post.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")
            </div>
        </div>
    </div>

    @if (post.Type == PostType.Question)
    {
        <h3 class="h5">Answers (@Model.Answers.Count)</h3>

        @if (Model.Answers.Count == 0)
        {
            <div class="alert alert-info">No answers yet.</div>
        }
        else
        {
            foreach (var a in Model.Answers)
            {
                var isAccepted = Model.AcceptedAnswerId == a.Id;
                <div class="card mb-2 @(isAccepted ? "border-success" : "")">
                    <div class="card-body">
                        @if (isAccepted)
                        {
                            <div class="badge bg-success mb-2">Accepted</div>
                        }

                        <pre style="white-space: pre-wrap; margin:0;">@a.Content</pre>

                        <div class="text-muted small mt-2">
                            @a.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")
                        </div>

                        @if (Model.CanAcceptAnswer && !isAccepted)
                        {
                            <form asp-action="AcceptAnswer" method="post" class="mt-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="postId" value="@post.Id" />
                                <input type="hidden" name="answerId" value="@a.Id" />
                                <button class="btn btn-sm btn-outline-success" type="submit">Accept</button>
                            </form>
                        }
                    </div>
                </div>
            }
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="card mt-3">
                <div class="card-body">
                    <h4 class="h6">Add Answer</h4>
                    <form asp-action="AddAnswer" asp-route-id="@post.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-2">
                            <textarea name="newAnswerContent" class="form-control" rows="4"></textarea>
                        </div>

                        <button class="btn btn-primary" type="submit">Submit</button>
                    </form>



                </div>
            </div>
        }
        else
        {
            <div class="alert alert-secondary mt-3">
                <a asp-area="Identity" asp-page="/Account/Login">Login</a> to add an answer.
            </div>
        }
        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
        {
            <div class="d-flex gap-2 mb-3">
                <form asp-controller="Moderation" asp-action="TogglePin" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@post.Id" />
                    <button class="btn btn-sm btn-outline-warning" type="submit">
                        @(post.IsPinned ? "Unpin" : "Pin")
                    </button>
                </form>

                <form asp-controller="Moderation" asp-action="ToggleLock" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@post.Id" />
                    <button class="btn btn-sm btn-outline-danger" type="submit">
                        @(post.IsLocked ? "Unlock" : "Lock")
                    </button>
                </form>

                <form asp-controller="Moderation" asp-action="DeletePost" method="post"
                      onsubmit="return confirm('Delete this post?');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@post.Id" />
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                </form>
            </div>
        }

    }
</div>
