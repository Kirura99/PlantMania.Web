@using PlantMania.Web.Models
@model PlantMania.Web.ViewModels.Forum.ForumListViewModel

@{
    ViewData["Title"] = "Forum";
    var categories = ViewBag.Categories as List<Category> ?? new();
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="m-0">Forum</h1>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-primary" asp-action="Create">Create</a>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login to create</a>
        }
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-5">
            <input class="form-control" name="q" value="@Model.Q" placeholder="Search..." />
        </div>

        <div class="col-md-3">
            <select class="form-select" name="categoryId">
                <option value="">All categories</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">
                        @c.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select class="form-select" name="type">
                <option value="">All</option>
                <option value="@PostType.Post" selected="@(Model.Type == PostType.Post)">Posts</option>
                <option value="@PostType.Question" selected="@(Model.Type == PostType.Question)">Questions</option>
            </select>
        </div>

        <div class="col-md-2 d-grid">
            <button class="btn btn-secondary" type="submit">Apply</button>
        </div>
    </form>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">No posts yet.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model.Items)
            {
                <a class="list-group-item list-group-item-action"
                   asp-action="Details" asp-route-id="@item.Id">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="fw-semibold">
                                @if (item.Type == PostType.Question)
                                {
                                    <span class="badge bg-info text-dark me-2">Q</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-2">Post</span>
                                }
                                @item.Title
                                @if (item.IsPinned)
                                {
                                    <span class="badge bg-warning text-dark ms-2">Pinned</span>
                                }
                                @if (item.IsLocked)
                                {
                                    <span class="badge bg-danger ms-2">Locked</span>
                                }
                            </div>
                            <div class="text-muted small">
                                Category: @item.CategoryName • @item.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")
                            </div>
                        </div>
                        <div class="text-muted small">
                            Answers: <strong>@item.AnswersCount</strong>
                        </div>
                    </div>
                </a>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.Page ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("Index", new { q = Model.Q, categoryId = Model.CategoryId, type = Model.Type, page = p })">@p</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
